{
  "name": "react-boilerplate",
  "description": "An opinionated React.js boilerplate",
  "version": "1.0.0",
  "author": "Marcos Moura <marcosvmmoura@gmail.com>",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/marcosmoura/react-boilerplate"
  },
  "scripts": {
    "dev": "babel-node build/server/development.js",
    "build": "rm -rf dist && babel-node build/server/production.js",
    "lint": "eslint --ext .js,.jsx --fix src build",
    "test": "ava src/**/*.test.js",
    "coverage": "rm -rf .nyc_output .coverage && mkdir .nyc_output && nyc yarn run test",
    "check-coverage": "nyc check-coverage --statements 90 --branches 90 --functions 90 --lines 90"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router-dom": "^4.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "ava": "^0.18.2",
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.2.2",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "chalk": "^1.1.3",
    "connect-history-api-fallback": "^1.3.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.0",
    "css-mqpacker": "^5.0.1",
    "enzyme": "^2.8.0",
    "eslint": "^3.18.0",
    "eslint-friendly-formatter": "^2.0.7",
    "eslint-loader": "^1.7.0",
    "eslint-plugin-react": "^6.10.3",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "nyc": "^10.2.0",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "optimize-js-plugin": "^0.0.4",
    "ora": "^1.2.0",
    "react-addons-test-utils": "^15.4.2",
    "sass-loader": "^6.0.3",
    "url-loader": "^0.5.8",
    "webpack": "^2.3.2",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-merge": "^4.1.0"
  },
  "browserslist": [
    "last 3 versions",
    "not IE < 10"
  ],
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  }
}
